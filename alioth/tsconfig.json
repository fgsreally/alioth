{
  "compilerOptions": {
    "types": [
      "@vue-macros/reactivity-transform/macros-global"
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "vueCompilerOptions": {
    "plugins": [
      "@vue-macros/volar/short-vmodel"
    ],
    // prefix
    "shortVmodel": {
      "prefix": "$"
    }
  },
  "references": [
    {
      "path": "./tsconfig.node.json"
    },
    {
      "path": "./tsconfig.app.json"
    }
  ]
}